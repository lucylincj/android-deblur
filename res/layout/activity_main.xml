    <TextView
        android:id="@+id/values0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />
    <TextView
        android:id="@+id/values1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     />
    <TextView
        android:id="@+id/values2"
